{
  "runOnSave.commands": [
    {
      "match": "\\.env(\\.\\w+)?$",
      "notMatch": "\\.example$",
      "isAsync": true,
      "command": "/scripts/create-env-example.sh"
    },
    {
      "match": "\\.env$",
      "isAsync": true,
      "command": "gh secret set -f .env"
    },
  ],
  "python.analysis.typeCheckingMode": "basic",
  "jupyter.kernels.excludePythonEnvironments": [
    "/bin/python3",
    "/usr/bin/python3"
  ]
}
